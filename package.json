{
  "name": "md-ide",
  "main": "./app/main.js",
  "version": "0.0.0",
  "author": "senlin",
  "scripts": {
    "_dev": "vite --port 5500",
    "electron": "wait-on tcp:5500 && cross-env NODE_ENV=development electron .",
    "dev": "concurrently -k \"npm run _dev\" \"npm run electron\"",
    "_build": "vite build",
    "preview": "vite preview",
    "pack": "electron-builder --dir",
    "build": "electron-builder",
    "prebuild": "npm run _build",
    "prepack": "npm run _build"
  },
  "dependencies": {
    "concurrently": "^7.5.0",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "gray-matter": "^4.0.3",
    "markdown-to-jsx": "^7.1.7",
    "mobx": "^6.7.0",
    "mobx-react-lite": "^3.4.0",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite-plugin-prismjs": "0.0.8",
    "wait-on": "^6.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^2.1.0",
    "electron": "^21.1.1",
    "electron-build": "0.0.3",
    "electron-builder": "^23.6.0",
    "vite": "^3.2.3"
  },
  "build": {
    "appId": "md-ide.ElectronReact",
    "productName": "markdown-ide",
    "copyright": "Copyright Â© 2022 ${author}",
    "directories": {
      "buildResources": "assets"
    },
    "extends": null,
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "background": "assets/appdmg.png",
      "icon": "assets/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "win": {
      "target": [
        "msi",
        "nsis"
      ],
      "icon": "assets/icon.ico",
      "publisherName": "senlin"
    }
  }
}
